<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <id>com.vahid.plugin.SmartDoc</id>
    <idea-version since-build="251" until-build="253.*"/>

  <name>SmartDoc</name>

  <vendor email="vetemadi87@gmail.com" url="https://github.com/vahidetemadi/smartdoc">SmartDoc</vendor>

  <description><![CDATA[
    <br>SmartDoc plugin acts as an AI agent responsible for code document update.<br>
    <em>For each given method, it receives the request (from right click and select Update Comment) for comment generation, creates a strong and relevant prompt
    and communicates with the remote/local LLM for generating comment.</em>
  ]]></description>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.java</depends>

  <extensions defaultExtensionNs="com.intellij">
      <applicationConfigurable instance="com.vahid.plugin.smartdoc.config.SmartDocConfig"/>
      <registryKeyBean key="kotlin.mpp.tests.force.gradle" defaultValue="false" overrides="true"/>
  </extensions>
  <actions>
      <group id="com.vahid.plugin.smartdoc.group.UpdateGroup"
             text="UpdateComment"
             popup="true">
          <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="EditorCopy"/>
      </group>
      <action id="com.vahid.plugin.smartdoc.action.DeepSeekUpdateAction" class="com.vahid.plugin.smartdoc.action.DeepSeekUpdateAction"
              text="DeepSeek">
          <add-to-group group-id="com.vahid.plugin.smartdoc.group.UpdateGroup"/>
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt D"/>
      </action>
      <action id="com.vahid.plugin.smartdoc.action.OllamaUpdateAction" class="com.vahid.plugin.smartdoc.action.OllamaUpdateAction"
              text="OllamaLangChain">
          <add-to-group group-id="com.vahid.plugin.smartdoc.group.UpdateGroup"/>
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt O"/>
      </action>
  </actions>
</idea-plugin>